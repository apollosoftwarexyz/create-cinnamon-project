{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": [ "ES2022" ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true
  }
}
